<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/chat/createChat" method="post">
            <div class="form-group">
              <input
                type="text"
                class="form-control"
                name="chatName"
                placeholder="Chat Name"
                autofocus
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                rows="2"
                class="form-control"
                placeholder="Chat Description"
              ></textarea>
            </div>
            <div class="form-group">
              <textarea
                name="allowedUsers"
                rows="2"
                class="form-control"
                placeholder="Allowed Users (separated by commas)"
              ></textarea>
            </div>

            <div class="form-group">
              <button class="btn btn-success btn-block">Create Chat</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>